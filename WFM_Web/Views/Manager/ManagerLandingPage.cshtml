@model IEnumerable<WFM_Domain.ViewModel.EmployeeWithSkills>
@{
    ViewData["Title"] = "Candidate's List";
}
<script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"></script>
<script src="https://kit.fontawesome.com/deb77551de.js" crossorigin="anonymous"></script>

<style>
    .collapsetable {
        border-collapse: collapse;
        border: 3px solid white;
    }

    h4 {
        color: DodgerBlue;
    }

    table, th, td {
        border: 1px solid white;
        border-collapse: collapse;
        text-align: center;
    }

    tr {
        color: white;
    }

    body {
        background-color: black;
    }
</style>

<h4 style="text-align:center;">Available Resources List</h4>
<br/>

<table class="collapsetable" id="candidateListTbl" border="1" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Skills)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager)
            </th>
            <th>
                Lock Candidate
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="employeeid">  
                    @item.EmployeeId 
                </td>                
                <td class="employeeName">
                    @item.Name
                </td>
                <td class="employeeExp">
                    @item.Experience
                </td>
                <td>
                    <ul>
                        @foreach (var x in item.Skills)
                        {
                            <li>@x</li>
                        }
                    </ul>
                </td>
                <td class="employeeManager">
                    @item.Manager
                </td>
                <td>
                    @*<a asp-action="Edit" asp-route-id="@item.EmployeeId">Edit</a> |*@
                    @*<button id="candidateDetails" asp-action="UpdateCandidateDetails" asp-route-id="@item.EmployeeId" type="button" class="btn btn-primary"><i class="fa-solid fa-lock"></i>&nbsp;Request Lock</button> $"UpdateCandidateDetails/{item.EmployeeId}"*@
                    <button id="candidateDetailsModal" onclick="showSoftLockModal()" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop"><i class="fa-solid fa-lock"></i>&nbsp;Request Lock</button>
                    @*<a asp-action="Delete" asp-route-id="@item.EmployeeId">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
<script src="~/js/ManagerLandingPageJS.js" type="text/javascript"></script>

@{
    await Html.RenderPartialAsync("_ModelPopUp");
}
}